{
	"name": "vscode-sprint-planner",
	"displayName": "Azure DevOps planner",
	"description": "Azure DevOps planner",
	"publisher": "ipatalas",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.31.0"
	},
	"categories": [
		"Other",
		"Snippets"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/ipatalas/vscode-sprint-planner"
	},
	"activationEvents": [
		"onCommand:sprintplanner.publish",
		"onLanguage:planner"
	],
	"main": "./out/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "planner",
				"extensions": [
					".plan"
				],
				"aliases": [
					"planner"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "planner",
				"scopeName": "source.planner",
				"path": "./syntaxes/planner.tmGrammar.json"
			}
		],
		"commands": [
			{
				"command": "sprintplanner.publish",
				"title": "Publish planning"
			}
		],
		"snippets": [
			{
				"language": "planner",
				"path": "./snippets/planner.json"
			}
		],
		"configuration": {
			"title": "Azure DevOps planner",
			"properties": {
				"planner.url": {
					"title": "URL of Azure DevOps to be used",
					"type": "string",
					"description": "It should be in the following form: https://dev.azure.com/{organization}/{project}/"
				},
				"planner.token": {
					"title": "PAT token to be used for authentication",
					"type": "string",
					"markdownDescription": "How to obtain a token: https://docs.microsoft.com/en-us/azure/devops/organizations/accounts/use-personal-access-tokens-to-authenticate?view=azure-devops"				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"@types/mocha": "^2.2.42",
		"@types/node": "^10.12.21",
		"@types/pretty-hrtime": "^1.0.0",
		"tslint": "^5.12.1",
		"typescript": "^3.3.1",
		"vscode": "^1.1.28"
	},
	"dependencies": {
		"axios": "^0.18.0",
		"pretty-hrtime": "^1.0.3"
	}
}