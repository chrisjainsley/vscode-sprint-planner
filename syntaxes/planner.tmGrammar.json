{
	"scopeName": "source.planner",
	"patterns": [{ "include": "#expression" }],
	"repository": {
		"expression": {
			"patterns": [
				{ "include": "#iteration-id" },
				{ "include": "#user-story-id" },
				{ "include": "#estimation" },
				{ "include": "#task-description" },
				{ "include": "#task" }
			]
		},
		"iteration-id": {
			"match": "^IT#\\h{8}(\\-\\h{4}){3}\\-\\h{12}",
			"name": "entity.name.function"
		},
		"user-story-id": {
			"match": "^US#\\d+",
			"name": "entity.name.function"
		},
		"estimation": {
			"match": "\\d+h?$",
			"name": "constant.numeric"
		},
		"task-description": {
			"match": "^\t.*",
			"name": "comment.line"
		},
		"task": {
			"match": "^(?:(?:[-*] |(?!US#)\\w+)).*?(?=,\\s*\\d+h?$|$)",
			"name": "string.unquoted"
		}
	}
}